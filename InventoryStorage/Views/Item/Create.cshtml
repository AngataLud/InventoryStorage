@model InventoryStorage.Models.Item
@{ 
    ViewData["Title"] = "Създаване на нов предмет";
}
<body style="background-color: #FBF8F1; font-family: Verdana, Arial;">
    <br />
    <br />
    <br />
    <br />
    <h1>Създаване на нов предмет</h1>
    <form method="post" asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row">
            <div class="col-12">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class=" form-group row">
                    <label class="col-2 m-1 form-control" asp-for="Id">Номер</label>
                    <label class="col-3 m-1 form-control" asp-for="ItemName">Име</label>
                    <label class="col-3 m-1 form-control" asp-for="Description">Описание</label>
                    <label class="col-3 m-1 form-control" asp-for="Location">Местоположение</label>
                </div>
                <div class=" form-group row">
                    <input disabled class="col-2  form-control m-1" asp-for="Id" />
                    <input class="col-3  form-control m-1" asp-for="ItemName" />
                    <input class="col-3  form-control m-1" asp-for="Description" />
                    <input class="col-3  form-control m-1" asp-for="Location" />
                </div>
                <div class=" form-group row">
                    <button type="submit" class="col-3 btn btn-success m-1">Запазване</button>
                    <button asp-action="Index" class="col-3 btn btn-danger m-1">Назад</button>
                </div>
            </div>
        </div>
    </form>
</body>