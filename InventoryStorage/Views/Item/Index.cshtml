@model IEnumerable<InventoryStorage.Models.Item>

<body style="background-color: #FBF8F1; font-family: Verdana, Arial;">
    <br />
    <br />
    <br />
    <br />
    <div class="container p-3">
        <div class="row pt-4">
            <div class="col pt-6">
                <h2 class="text-primary">
                    Списък с предмети
                </h2>
            </div>
        </div>
        <br />
        <div class="col-6 text-right" style="float: right;">
            <a class="btn w-55" asp-controller="Item" asp-action="Create" style="background-color: #24A19C;color:whitesmoke;">Създаване на нов предмет</a>
        </div>
        @if (Model.Count() > 0)
        {
            <table class="table table-bordered borthead-dark table-striped table-hover" style="width:100%;
                background-color: aliceblue">
                <thead>
                    <tr>
                        <th>Номер</th>
                        <th>Име</th>
                        <th>Описание</th>
                        <th>Местоположение</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td width="10%">@item.Id</td>
                            <td width="24%">@item.ItemName</td>
                            <td width="24%">@item.Description</td>
                            <td width="14%">@item.Location</td>
                            <td width="24%">
                                <a class="btn btn-success m-1" asp-controller="Item" asp-action="Update" asp-route-id=@item.Id>Промяна</a>
                                <a class="btn btn-danger m-1" asp-controller="Item" asp-action="Delete" asp-route-id=@item.Id>Изтриване</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>Няма въведени предмети!</p>
        }
    </div>
</body>