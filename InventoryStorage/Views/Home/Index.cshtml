    ViewData["Title"] = "Начало";
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <style>
        body, html {
            /* height: 100%;*/
            margin: 0;
            font-family: Arial, Helvetica, sans-serif;
            background-image: url('https://www.bizechsystems.com/wp-content/uploads/2020/10/ict-resource-center.jpg');
            background-position: center;
            background-repeat: no-repeat;
            background-size: cover;
        }

        * {
            box-sizing: border-box;
        }

        .bg-text {
            background-color: rgb(0,0,0); /* Fallback color */
            background-color: rgba(0,0,0, 0.4); /* Black w/opacity/see-through */
            color: white;

           /* font-weight: bold;*/
            border: 3px solid #f1f1f1;
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            z-index: 2;
            width: 80%;
            padding: 20px;
            text-align: center;
        }
    </style>
</head>
<body>

    <div class="bg-text">
        <h1 style="font-size:30px;font-weight:bold">
            Това приложение има за цел да се подобри организацията и
            проследяването на предмети в училище.
        </h1>
        <h2>
            Създават се предмети с описание,местоположение,име и уникален номер, по които могат да бъдат извършвани различни операции
            като търсене, смяна на местоположение и проверяване на предишно местоположение.
        </h2>

        
    </div>

</body>
</html>

