@model InventoryStorage.Models.Item
@{
    ViewData["Title"] = "Търсене на предмет по номер";
}
<h1>Търсене на предмет по номер</h1>
<form method="post" asp-controller="Search" asp-action="Search">
    <div class="row">
        <div class="col-12">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class=" form-group row">
                <label class="col-2 m-1 form-control" asp-for="Id">Номер</label>
            </div>
            <div class=" form-group row">
                <input class="col-2  form-control m-1" asp-for="Id" />
            </div>
            <div class=" form-group row">
                <button type="submit" class="col-3 btn btn-success m-1">Запазване</button>
                <button asp-action="Index" class="col-3 btn btn-danger m-1">Назад</button>
            </div>
        </div>
    </div>
</form>