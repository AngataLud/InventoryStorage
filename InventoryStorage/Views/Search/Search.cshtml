@model IEnumerable<InventoryStorage.Models.Item>
@*@{
        ViewData["Title"] = "Търсене на предмет по номер";
    }*@
<h1>Търсене на предмет по номер</h1>
<form method="get" asp-controller="Search" asp-action="Search">
    <div class="row">
        <div class="col-12">
            <b>Търсене по:</b>
            @Html.RadioButton("searchBy", "Id", true)  Номер
            @Html.RadioButton("searchBy", "ItemName")  Име
            @Html.RadioButton("searchBy", "Description")  Описание
            @Html.RadioButton("searchBy", "Location")  Локация
            @*</div>*@
            <div class=" form-group row">
                <input type="search" name="search" />
                <input type="submit" value="Search for a name" />
            </div>
            <div class="form-group row">
                <a class="btn btn-success m-1" asp-controller="Search" asp-action="Search">Търсене</a>
            </div>
        </div>
    </div>
</form>
@try
{
    foreach (var item in Model)
    {
        <tr>
            <td width="10%">@item.Id</td>
            <td width="24%">@item.ItemName</td>
            <td width="24%">@item.Description</td>
            <td width="14%">@item.Location</td>
            <td width="24%">
                <a class="btn btn-success m-1" asp-controller="Item" asp-action="Update" asp-route-id=@item.Id>Промяна</a>
                <a class="btn btn-danger m-1" asp-controller="Item" asp-action="Delete" asp-route-id=@item.Id>Изтриване</a>
            </td>
        </tr>
    }
}
catch (NullReferenceException nullex)
{
    <p>@nullex</p>
}